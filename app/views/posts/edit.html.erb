<div class="max-w-2xl mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <h2 class="text-2xl font-bold mb-6 text-center">Edit Post</h2>

  <%= form_with(model: @post, local: true) do |form| %>
    <%= render partial: 'form', locals: { form: form, post: @post, submit_button_text: "Update Post", back_link_path: post_path(@post) } %>
  <% end %>
</div>
